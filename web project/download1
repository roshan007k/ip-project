<script>

//This is the script that creates the text in the Captions element

//Creates an empty array
var myArray = [];

//Gets all the figcaptions on the page & loops through them
jQuery('figcaption').each(function() {

    //Puts each figcaption into the variable theHTML, after making sure they're HTML & triming the white space
    var theHTML = jQuery(this).html().trim();

    //Adds the figcaption to the myArray array
    myArray.push(theHTML);

});

//Creates a variable called uniqueArray which removes duplicates from the myArray array
var uniqueArray = jQuery.unique(myArray)

window.uniqueArray = uniqueArray

//Loops through each element of the uniqueArray array
uniqueArray.forEach(function(item) {

    //Creates a variable called currentText, which finds the element with the class captions & gets it ready for HTML
    var currentText = jQuery('.captions').html()

    //Finds the element with the captions class & adds each item in the array to it
    jQuery('.captions').html(currentText + item + '<br>')

})



if ( jQuery( 'figcaption' ).length ) {
    //console.log('Hooray! A figcaption exists :)')
} else {
    //console.log('boo-urns! A figcaption does not exist :(');
    jQuery('.credit').hide();
}



</script>


